<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_remote">

    <fragment
        android:id="@+id/navigation_remote"
        android:name="com.example.myapplication.ui.remote.RemoteFragment"
        android:label="@string/title_remote"
        tools:layout="@layout/fragment_remote" />

    <fragment
        android:id="@+id/navigation_map"
        android:name="com.example.myapplication.ui.map.MapFragment"
        android:label="@string/title_map"
        tools:layout="@layout/fragment_map" />

    <fragment
        android:id="@+id/navigation_image"
        android:name="com.example.myapplication.ui.image.ImageFragment"
        android:label="@string/title_image"
        tools:layout="@layout/fragment_image" />
</navigation>